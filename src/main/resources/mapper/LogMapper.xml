<?xml version="1.0" encoding="UTF-8" ?>
        <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mycharge.trainingmanagementplatform.mapper.LogMapper">


    <select id="student_login" resultType="com.mycharge.trainingmanagementplatform.model.Student">
        select * from student_info where username = #{stu_username} and password = #{stu_password}
</select>

   <select id="teacherLogIn" resultType="com.mycharge.trainingmanagementplatform.model.Teacher">
        select * from user_info where username = #{username} and password = #{password}
    </select>

    <insert id="studentRegister">
        insert user_info (user_name,user_password, user_email) values (#{username},#{password}, #{eamil}})
    </insert>
</mapper>