<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mycharge.trainingmanagementplatform.mapper.AMapper">

    <insert id="save"  useGeneratedKeys="true" keyProperty="aid" parameterType="com.alibaba.fastjson.JSONObject">
        insert A (aname) values (#{aname})
    </insert>

    <select id="findByAname" resultType="com.alibaba.fastjson.JSONObject" parameterType="com.alibaba.fastjson.JSONObject" >
        select * from A
        <where>
            <if test="aid != null">
                aid = #{aid,jdbcType=INTEGER}
            </if>
            <if test="aname != null">
                and aname = #{aname,jdbcType=VARCHAR}
            </if>
        </where>
    </select>
</mapper>
